<!DOCTYPE html>
<html lang="en">
<head>
	<%- include ('../partials/head.ejs') %>
	<title>Recipe Page</title>
</head>
<body>
	<%- include ('../partials/nav.ejs') %>
	<div class="recipe-header">
		<div class="recipe-header-name">
			<h1><%= recipe.name %></h1>
			<p><%= recipe.yield %></p>
		</div>
		<div class="recipe-header-small-details">
			<p><%= recipe.homeCook %></p>
			<p><%= recipe.timestamps %></p>
		</div>
	</div>
	<div class="recipe-body">
		<div class="ingredients">
			<h3>ingredients</h3>
			<ul>
				<li><%= recipe.ingredients %></li>
			</ul>
		</div>
		<div class="preparation">
			<div class="show-recipe-image">
				<img src="Images/Chicken Curry.jpeg">
			</div>
			<div class="preparation-text">
				<h3>preparation</h3>
				<p><%= recipe.preparation %></p>
			</div>
		</div>
		<div class='deletebtn'>
			<form method='POST' action='/recipes/<%= recipe._id%>?_method=DELETE'>
				<button>Delete Recipe</button>
			</form>
		</div>
	</div>
</body>
</html>