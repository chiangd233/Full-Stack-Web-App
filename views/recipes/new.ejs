<!DOCTYPE html>
<html lang="en">
<head>
	<%- include ('../partials/head.ejs') %>
	<title>Create Recipe</title>
</head>
<body>
  <%- include ('../partials/nav.ejs') %>
	<div class="homecook-name">
		<h1><%= user.name %></h1>
		<p><%= user.recipe.length %></p>
	</div>
	<form action="/recipes" method="POST">
		<div class="recipe-form">
			<div class="short-answer">
				<h3>recipe name</h3>
				<input type="text" name="name" placeholder="name...">
				<h3>yield</h3>
				<input type="text" name="yield" placeholder="yield...">
				<h3>photo</h3>
				<input type="text" name="photo" placeholder="upload...">
			</div>
			<div class="long-answer">
				<h3>ingredients</h3>
				<textarea type="text" name="ingredients">list of ingredients...</textarea>
			</div>
			<div class="long-answer">
				<h3>preparation</h3>
				<textarea name="preparation">methods, preparations, & recipe notes...</textarea>
			</div>
		</div>
		<input type="hidden" name="homecook" value="<%= user._id %>">
		<input type="submit" value="Submit">
	</form>
</body>
</html>